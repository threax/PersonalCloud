{
  "$schema": "https://www.threax.com/EdityMcEditface/edityschema.json",
  "vars": {
    "siteTitle": "Threax Personal Cloud"
  },
  "buildVars":{
    "pathBase": "PersonalCloud"
  },
  "additionalContent": [ "AutoUploads" ],
  "compilers": [
    {
      "type": "Html",
      "extension": ".html"
    }
  ],
  "preBuildTasks": [
    {
      "name": "GetPublishRepo",
      "settings": {
        "url": "https://github.com/threax/PersonalCloud.git"
      }
    }
  ],
  "postBuildTasks": [
    {
      "name": "PublishMenu",
      "settings": {
        "menuFile": "menus/mainMenu.json"
      }
    }
  ],
  "postPublishTasks": [
    {
      "name" : "PublishToGitRepo"
    }
  ]
}